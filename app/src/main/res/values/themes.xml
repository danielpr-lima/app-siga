<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Orgs.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="AlertDialogCustomTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/dialog_background_color_solid</item> <item name="android:textColorAlertDialogListItem">@color/dialog_message_text_color</item>
        <item name="android:textColorPrimary">@color/dialog_message_text_color</item>

        <item name="android:textAppearanceMedium">@style/CustomAlertDialogTitleText</item>

        <item name="colorPrimary">@color/dialog_button_text_color_visible</item> <item name="colorAccent">@color/dialog_button_text_color_visible</item> <item name="android:buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton</item>
    </style>

    <style name="CustomAlertDialogTitleText" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/dialog_title_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/dialog_edittext_hint_visible</item> <item name="android:textColor">@color/dialog_edittext_text_color</item> </style>

    <style name="CustomAlertDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_button_text_color_visible</item> </style>

</resources>