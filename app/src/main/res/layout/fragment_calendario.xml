<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CalendarioFragment"
    android:background="#F2EFE7"
    android:padding="16dp">

    <TextView
        android:id="@+id/calendario_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calendário escolar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/calendario_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clique no botão abaixo para visualizar o calendário escolar em seu navegador."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/calendario_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_abrir_calendario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir Calendário Escolar"
        android:backgroundTint="@color/fatec_blue"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/calendario_descricao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>