<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:background="#F2EFE7">

    <!-- Círculo Preto -->


    <!-- Círculo Vermelho -->


    <!-- Campo de Login -->


    <!-- Botão de Login -->

   <View
       android:id="@+id/circleBlack"
       android:layout_width="344dp"
       android:layout_height="356dp"
       android:layout_marginStart="88dp"
       android:layout_marginBottom="44dp"
       android:background="@drawable/circulo_preto"
       app:layout_constraintBottom_toTopOf="@+id/imageLogo"
       app:layout_constraintStart_toStartOf="parent"
       tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/circleRed"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginEnd="264dp"
        android:background="@drawable/circulo_vermelho"
        app:layout_constraintBottom_toTopOf="@+id/imageLogo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="224dp"
        android:src="@drawable/logo_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editLogin"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@drawable/edittext_borda"
        android:hint="E-mail"
        android:paddingStart="16dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLogo" />

    <!-- Campo de Senha -->

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_borda"
        android:hint="Senha"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingStart="16dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editLogin" />

    <!-- redefinir-->

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Entrar"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editSenha" />

    <TextView
        android:id="@+id/textRedefinir"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Redefinir senha"
        android:textColor="#2196F3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin" />


</androidx.constraintlayout.widget.ConstraintLayout>