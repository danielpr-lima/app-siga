<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nome da Matéria -->
        <TextView
            android:id="@+id/tvMateriaNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome da Matéria"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- P1 (top left) -->
        <TextView
            android:id="@+id/tvP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P1: 0.0"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvMateriaNome"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- P2 (top right) -->
        <TextView
            android:id="@+id/tvP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P2: 0.0"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvMateriaNome"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- P3 (bottom left) -->
        <TextView
            android:id="@+id/tvP3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P3: 0.0"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvP1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMediaFinal" />

        <!-- Atividade (bottom right) -->
        <TextView
            android:id="@+id/tvAtividade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atividade: 0.0"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvP2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMediaFinal" />

        <!-- Média Final (centralizado no rodapé) -->
        <TextView
            android:id="@+id/tvMediaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média Final: 0.0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvP3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

