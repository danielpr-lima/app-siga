<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_card"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_materia_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Algoritmos e Lógica de Programação" />

        <TextView
            android:id="@+id/item_materia_professor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toBottomOf="@id/item_materia_nome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Professor: Ana Oliveira" />

        <TextView
            android:id="@+id/item_materia_notas_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toBottomOf="@id/item_materia_professor"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_materia_nota_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toTopOf="@id/item_materia_notas_titulo"
            app:layout_constraintStart_toEndOf="@id/item_materia_notas_titulo"
            tools:text="P1: 7.0" />

        <TextView
            android:id="@+id/item_materia_nota_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toTopOf="@id/item_materia_notas_titulo"
            app:layout_constraintStart_toEndOf="@id/item_materia_nota_p1"
            tools:text="P2: 8.0" />

        <TextView
            android:id="@+id/item_materia_nota_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toTopOf="@id/item_materia_notas_titulo"
            app:layout_constraintStart_toEndOf="@id/item_materia_nota_p2"
            tools:text="T: 7.0" />

        <TextView
            android:id="@+id/item_materia_nota_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toTopOf="@id/item_materia_notas_titulo"
            app:layout_constraintStart_toEndOf="@id/item_materia_nota_t"
            tools:text="P3: 9.0" />

        <TextView
            android:id="@+id/item_materia_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_card"
            app:layout_constraintTop_toBottomOf="@id/item_materia_notas_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="Média: 7.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>