<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Menu lateral fixo -->
    <LinearLayout
        android:id="@+id/menuLateral"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:paddingTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <View
            android:id="@+id/circleBlack"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/circulo_preto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-70dp"
            android:layout_marginStart="-60dp"
            app:layout_constraintHorizontal_bias="1.1" />


        <!-- Círculo Vermelho -->
        <View
            android:id="@+id/circleRed"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/circulo_vermelho"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-70dp"
            android:layout_marginStart="-100dp" />

        <!-- Ícones do menu -->
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_menu_botao"
            />

        <ImageView
            android:id="@+id/btnNotas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_menu_botao"
            />

        <ImageView
            android:id="@+id/btnFaltas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_menu_botao"
            />

        <ImageView
            android:id="@+id/btnDocumentos"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_menu_botao"
            />

        <ImageView
            android:id="@+id/btnCalendario"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_menu_botao"
            />

        <ImageView
            android:id="@+id/btnUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_menu_botao"
            />

        <ImageView
            android:id="@+id/btnNoticias"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_menu_botao"
            />
    </LinearLayout>

    <!-- Container para os fragments -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/menuLateral"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
