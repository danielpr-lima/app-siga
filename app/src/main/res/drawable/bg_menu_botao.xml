<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado selecionado (quando a tela está ativa) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Cor ativa (ex: azul) -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Estado padrão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff777" /> <!-- Cor padrão (cinza claro) -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
